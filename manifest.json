{
  "manifest_version": 2,

  "name": "Focus Popup",
  "description": "Open the page in a popup window",
  "version": "2.1",
  "icons": {
	  "16": "icons/icon16.png",
	  "38": "icons/icon38.png",
	  "48": "icons/icon48.png",
	  "64": "icons/icon64.png"
  },
  
  "omnibox": {
  	"keyword" : "focus"
  },

  "browser_action": {
    "default_icon": "icons/icon.png"
  },
  
  "background": {
    "scripts": ["chrome-promise.js", "background.js"]
  },
  
  "permissions": [
    "contextMenus", "activeTab", "*://*/*", "tabs", "storage"
  ],
  
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
